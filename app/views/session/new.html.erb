<h2>Login</h2>
<% if flash[:error] %>
    <strong>
        <%= flash[:error] %>
    </strong>
    <br>
    <br>
<% end %>

<%= form_tag login_path do %>
    <%= label_tag "Username:" %>
    <%= text_field_tag :handle %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag 'Login' %>
<% end %>